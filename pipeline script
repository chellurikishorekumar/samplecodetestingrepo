pipeline {
    agent any
    
    stages {
        stage("SCM checkout") {
            steps {
                git branch: 'master', url: 'https://github.com/chellurikishorekumar/samplecodetestingrepo.git'
            }
        }
        
        stage("Execute Ansible") {
            steps {
                ansiblePlaybook credentialsId: 'ssh',
                                 disableHostKeyChecking: true,
                                 installation: 'Ansible',
                                 inventory: 'dev.inv',
                                 playbook: 'nginxfile.yml'
            }    
        }    
    }
} 
